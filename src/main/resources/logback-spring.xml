<?xml version="1.0" encoding="UTF-8"?>
<!-- TODO Fix logging https://github.com/lankydan/logback-with-springboot-config/blob/master/src/main/resources/logback.xml
https://github.com/lankydan/logback-with-springboot-config/blob/master/src/main/resources/logback-spring.xml
https://stackoverflow.com/questions/29918323/how-to-configure-rolling-file-appender-within-spring-boots-application-yml
https://dzone.com/articles/configuring-logback-with-spring-boot
-->
<configuration>
    <include resource="org/springframework/boot/logging/logback/base.xml"/>
    <include resource="org/springframework/boot/logging/logback/file-appender.xml" />

    <property name="LOG_PATH" value="logs"/>

    <appender name="SAVE-TO-FILE"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/log.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                %d{dd-MM-yyyy HH:mm:ss.SSS} [%thread] %-5level %logger{36}.%M - %msg%n
            </Pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>
                ${LOG_PATH}/archived/log.%d{dd-MM-yyyy}.log
            </fileNamePattern>
            <maxHistory>10</maxHistory>
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <springProfile name="default">
        <root level="info">
            <appender-ref ref="SAVE-TO-FILE"/>
        </root>
        <logger name="org.springframework.web" additivity="false" level="error">
            <appender-ref ref="SAVE-TO-FILE"/>
        </logger>
        <logger name="com.multiheaded.webapp" additivity="false" level="error">
            <appender-ref ref="SAVE-TO-FILE"/>
        </logger>
        <logger name="org.springframework.security" additivity="false" level="error">
            <appender-ref ref="SAVE-TO-FILE"/>
        </logger>
        <logger name="org.hibernate" additivity="false" level="error">
            <appender-ref ref="SAVE-TO-FILE"/>
        </logger>
    </springProfile>

    <springProfile name="dev">
        <root level="info">
            <appender-ref ref="STDOUT"/>
            <appender-ref ref="SAVE-TO-FILE"/>
        </root>
        <logger name="org.springframework.web" additivity="false" level="debug">
            <appender-ref ref="STDOUT"/>
            <appender-ref ref="SAVE-TO-FILE"/>
        </logger>
        <logger name="com.multiheaded.webapp" additivity="false" level="debug">
            <appender-ref ref="STDOUT"/>
            <appender-ref ref="SAVE-TO-FILE"/>
        </logger>
        <logger name="org.springframework.security" additivity="false" level="debug">
            <appender-ref ref="STDOUT"/>
            <appender-ref ref="SAVE-TO-FILE"/>
        </logger>
        <logger name="org.hibernate" additivity="false" level="debug">
            <appender-ref ref="STDOUT"/>
            <appender-ref ref="SAVE-TO-FILE"/>
        </logger>
    </springProfile>

    <springProfile name="production">
        <root level="warning">
            <appender-ref ref="SAVE-TO-FILE"/>
        </root>
        <logger name="org.springframework.web" additivity="false" level="error">
            <appender-ref ref="SAVE-TO-FILE"/>
        </logger>
        <logger name="com.multiheaded.webapp" additivity="false" level="error">
            <appender-ref ref="SAVE-TO-FILE"/>
        </logger>
        <logger name="org.springframework.security" additivity="false" level="error">
            <appender-ref ref="SAVE-TO-FILE"/>
        </logger>
        <logger name="org.hibernate" additivity="false" level="error">
            <appender-ref ref="SAVE-TO-FILE"/>
        </logger>
    </springProfile>

</configuration>